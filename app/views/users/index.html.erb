<section class="users-section">
  <ul class="users-list">
    <% @users.each do |user| %>
      <li>
         Name: <%= user.name %>
        <span class="profile-link">
          <%= link_to 'See Profile',  user_path(user), class: "btn btn-secondary" %>
          <% if current_user.friend?(user) %>
            <%= link_to 'Remove friend', remove_friend_path(user_id: user.id), method: :delete, class: "btn btn-danger" %>
          <% else %>
            <%= form_for current_user.friendships.build(friend: user) do |f| %>
              <%= f.hidden_field :friend_id %>
              <%= f.hidden_field :status %>
              <button class="btn btn-primary">Add friend</button>
            <% end %>
          <% end %>
        </span>
      </li>
    <% end %>
  </ul>
</section>
